<li class="price-alert-card" id="price-alert-#{price_alert.id}">
    <a href="" class="cs-link">
        <h3 class="cs-h3"><%= price_alert.event.name %></h3>
        <ul class=>
            <%= image_tag(price_alert.event.image_url) %>
            <li> <strong>Date: </strong> <%= price_alert.event.date %> </li>
            <li> <strong>Venue: </strong> <%= price_alert.event.venue %> </li>
            <li> <strong>Live Price: </strong> <%= price_alert.event.live_price_cad %> </li>
            <li> <strong>Alert Price: </strong> <%= price_alert.alert_price %> </li>
            <li> <strong>Event Type: </strong> <%= price_alert.event.event_type %> </li>
            <li> <strong>User Email: </strong> <%= price_alert.user.email %> </li>
        </ul>
        <%= link_to 'Show Alert', alert %>
        <div>
            <%= link_to "Delete Event", price_alert_path(price_alert), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                        } %>
        </div>
    </a>
</li>